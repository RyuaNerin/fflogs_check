{
	worldData {
		{{ range $encIDIndex, $encID := $.InpEncounterIDs }}
		e_{{ $encID }}: encounter(id: {{ $encID }}) {
			id
			name
		}
		{{ end }}
	}
	characterData {
		char: character(name: "{{ $.InpCharName }}", serverSlug:"{{ $.InpCharServer }}", serverRegion: "{{ $.InpCharRegion }}") {
			id
			hidden
		}
		char_encounter: character(name: "{{ $.InpCharName }}", serverSlug:"{{ $.InpCharServer }}", serverRegion: "{{ $.InpCharRegion }}") {
			{{ range $encIDIndex, $encID := $.InpEncounterIDs }}
			dps_{{ $encID }}: encounterRankings(encounterID: {{ $encID }})
			{{ range $i, $part := $.InpAdditionalPartition }}
			dps_{{ $encID }}_{{ $i }}: encounterRankings(encounterID: {{ $encID }}, partition: {{ $part }} )
			{{ end }}
			{{ end }}
			
			{{ range $encIDIndex, $encID := $.InpEncounterIDs }}
			hps_{{ $encID }}: encounterRankings(encounterID: {{ $encID }}, metric: hps)
			{{ range $i, $part := $.InpAdditionalPartition }}
			hps_{{ $encID }}_{{ $i }}: encounterRankings(encounterID: {{ $encID }}, partition: {{ $part }}, metric: hps)
			{{ end }}
			{{ end }}
		}
	}
}